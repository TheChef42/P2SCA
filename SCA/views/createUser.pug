extends layout

block content

    div(class = 'text-center center-div' id = 'login')
        div(class = 'container w-25 border')
            h1=title
            form(method='POST' action='')
                div.form-group
                    label Email:
                    input(class='form-control' type='email' placeholder='place@holder.com' name='username' required='true' value=(undefined===user ? '' : user.username) )
                    if (userexists === 'true')
                        p Email is already in use
                    label Password:
                    input(class='form-control' type='password' placeholder='Password' name='password' required='true' value=(undefined===user ? '' : user.password))
                    label Address:
                    input(class='form-control' type='text' placeholder='Placeholder 42' name='address' required='true' value=(undefined === user ? '' : user.address))
                    //label(for='region') Region:
                    //input#region.form-control(name='region' required='true' value=(undefined === user ? '' : user.region))
                    label(for='Region') Choose a region:
                    select#region(name='region')
                        option(value='Águas Claras') Águas Claras
                        option(value='Arniqueira') Arniqueira
                        option(value='Brazlândia') Brazlândia
                        option(value='Candangolândia') Candangolândia
                        option(value='Ceilândia') Ceilândia
                        option(value='Cruzeiro') Cruzeiro
                        option(value='Fercal') Fercal
                        option(value='Gama') Gama
                        option(value='Guará') Guará
                        option(value='Itapoã') Itapoã
                        option(value='Jardim Botânico') Jardim Botânico
                        option(value='Lago Norte') Lago Norte
                        option(value='Lago Sul') Lago Sul
                        option(value='Núcleo Bandeirante') Núcleo Bandeirante
                        option(value='Paranoá') Paranoá
                        option(value='Park Way') Park Way
                        option(value='Planaltina') Planaltina
                        option(value='Plano Piloto') Plano Piloto
                        option(value='Recanto das Emas') Recanto das Emas
                        option(value='Riacho Fundo') Riacho Fundo
                        option(value='Riacho Fundo II') Riacho Fundo II
                        option(value='SCIA') SCIA
                        option(value='SIA') SIA
                        option(value='Samambaia') Samambaia
                        option(value='Santa Maria') Santa Maria
                        option(value='Sobradinho') Sobradinho
                        option(value='Sobradinho II') Sobradinho II
                        option(value='Sol Nascente/Pôr do Sol') Sol Nascente/Pôr do Sol
                        option(value='Sudoeste/Octogonal') Sudoeste/Octogonal
                        option(value='São Sebastião') São Sebastião
                        option(value='Taguatinga') Taguatinga
                        option(value='Varjão') Varjão
                        option(value='Vicente Pires') Vicente Pires
                    p What are you?
                    label Consumer
                    input(class='form-control-input' type='radio' name='driver' checked='true' required='true' value=(undefined === user ? 'false' : user.driver))
                    label Driver
                    input(class='form-control-input' type='radio' name='driver' value=(undefined === user ? 'true' : user.driver))

                button.btn.btn-primary(type='submit') Submit

