extends layout

block content

  div(class = 'text-center center-div' id = 'login')
    div(class = 'container w-25 border py-5')
      div(class ='title pb-5')
        h2(class ='font-weight-bold') Login system
            h3 Log in for the existing user
            if(locals.logout)
              div(class='alert alert-success text-center')
                =logout
      form(action='/login' method='POST' class='pt-3')
        div(class = 'form-group')
          input(type='email', class='form-control', placeholder= 'email', name='email')
          small(class = 'form-text text-left text-black') Register email address
        div(class = 'form-group')
          input(type='password', class='form-control', name='password', placeholder='password')
        button(type='submit', class='btn btn-success rounded-pill') Submit
      a(href='/create') Create user
